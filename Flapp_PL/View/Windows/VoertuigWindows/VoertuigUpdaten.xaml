<Window x:Class="Flapp_PL.View.Windows.VoertuigWindows.VoertuigUpdaten"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flapp_PL.View.Windows.VoertuigWindows"
        mc:Ignorable="d"
        Title="VoertuigUpdaten" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Vehicle Details" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="28" Margin="5"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Vehicle ID" Margin="5" FontSize="16"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Brand" Margin="5" FontSize="16"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Model" Margin="5" FontSize="16"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Chassis Number" Margin="5" FontSize="16"/>
        <Label Grid.Row="5" Grid.Column="0" Content="License Plate" Margin="5" FontSize="16"/>
        <Label Grid.Row="6" Grid.Column="0" Content="Type" Margin="5" FontSize="16"/>
        <Label Grid.Row="7" Grid.Column="0" Content="Color" Margin="5" FontSize="16"/>
        <Label Grid.Row="8" Grid.Column="0" Content="Doors" Margin="5" FontSize="16"/>
        <Label Grid.Row="1" Grid.Column="2" Content="Driver" Margin="5" FontSize="16"/>
        <Label Grid.Row="2" Grid.Column="2" Content="Fueltypes" Margin="5" FontSize="16"/>

        <TextBox Name="txtVoertuigId" Grid.Row="1" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" IsEnabled="False"/>
        <TextBox Name="txtMerk" Grid.Row="2" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" IsEnabled="False"/>
        <TextBox Name="txtModel" Grid.Row="3" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" IsEnabled="False"/>
        <TextBox Name="txtChassisNummer" Grid.Row="4" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" IsEnabled="False"/>
        <TextBox Name="txtNummerplaat" Grid.Row="5" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" IsEnabled="False"/>
        <TextBox Name="txtVoertuigtype" Grid.Row="6" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" IsEnabled="False"/>
        <TextBox Name="txtKleur" Grid.Row="7" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" IsEnabled="False"/>
        <TextBox Name="txtDeuren" Grid.Row="8" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" IsEnabled="False"/>
        <TextBox Name="txtBestuurder" Grid.Row="1" Grid.Column="3" Margin="5" VerticalAlignment="Center" FontSize="16" IsEnabled="False"/>
        <ListBox Name="lstBrandstoftypes" Grid.Row="2" Grid.Column="3" Grid.RowSpan="4" Margin="5" SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Path=FuelName}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>


        </ListBox>
    </Grid>
</Window>
