<Window x:Class="Flapp_PL.View.Windows.VoertuigWindows.VoertuigUpdaten"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flapp_PL.View.Windows.VoertuigWindows"
        mc:Ignorable="d"
        Title="VoertuigUpdaten" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Button Style-->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="borderButton" CornerRadius="10" Background="#112D4E" BorderThickness="0">
                            <ContentPresenter x:Name="cpButton" Content="{TemplateBinding Content}" TextBlock.Foreground="#F9F7F7" VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="borderButton" Property="Background" Value="#3F72AF"/>
                                <Setter TargetName="cpButton" Property="TextBlock.Foreground" Value="#FFD369"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Vehicle Details" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="28" Margin="5"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Vehicle ID" Margin="5" FontSize="16"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Brand" Margin="5" FontSize="16"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Model" Margin="5" FontSize="16"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Chassis Number" Margin="5" FontSize="16"/>
        <Label Grid.Row="5" Grid.Column="0" Content="License Plate" Margin="5" FontSize="16"/>
        <Label Grid.Row="6" Grid.Column="0" Content="Type" Margin="5" FontSize="16"/>
        <Label Grid.Row="7" Grid.Column="0" Content="Color" Margin="5" FontSize="16"/>
        <Label Grid.Row="8" Grid.Column="0" Content="Doors" Margin="5" FontSize="16"/>
        <Label Grid.Row="1" Grid.Column="2" Content="Driver" Margin="5" FontSize="16"/>
        <Label Grid.Row="2" Grid.Column="2" Content="Fueltypes" Margin="5" FontSize="16"/>

        <TextBox Name="txtVoertuigId" Grid.Row="1" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" IsEnabled="False"/>
        <TextBox Name="txtMerk" Grid.Row="2" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" />
        <TextBox Name="txtModel" Grid.Row="3" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" />
        <TextBox Name="txtChassisNummer" Grid.Row="4" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" />
        <TextBox Name="txtNummerplaat" Grid.Row="5" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" />
        <TextBox Name="txtVoertuigtype" Grid.Row="6" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" />
        <TextBox Name="txtKleur" Grid.Row="7" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" />
        <TextBox Name="txtDeuren" Grid.Row="8" Grid.Column="1" Margin="5" VerticalAlignment="Center" FontSize="16" />
        <TextBox Name="txtBestuurder" Grid.Row="1" Grid.Column="3" Margin="5" VerticalAlignment="Center" FontSize="16"/>
        <ListBox Name="lstBrandstoftypes" Grid.Row="2" Grid.Column="3" Grid.RowSpan="4" Margin="5" SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Path=FuelName}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel
            HorizontalAlignment="Left"
            Orientation="Horizontal" Margin="40,41,0,0" Width="261" Grid.Column="3" Grid.Row="7" Grid.RowSpan="2">
            <Button Content="Update"
                x:Name="btnUpdate1"
                Click="btnUpdate_Click"
                Margin="5"
                Height="25"
                Width="100"/>
            <Button Content="Annuleren"
                x:Name="btnAnnuleren1"
                Click="btnAnnuleren_Click"
                Margin="5"
                Height="25"
                Width="100"/>
        </StackPanel>
    </Grid>
</Window>
