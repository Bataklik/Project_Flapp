<Window x:Class="Flapp_PL.View.Windows.VoertuigWindows.VoertuigZoeken"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flapp_PL.View.Windows.VoertuigWindows"
        mc:Ignorable="d"
        Title="VoertuigZoeken" Height="425" Width="337" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Button Style-->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="borderButton" CornerRadius="5" Background="#112D4E" BorderThickness="0">
                            <ContentPresenter x:Name="cpButton" Content="{TemplateBinding Content}" TextBlock.Foreground="#F9F7F7" VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="borderButton" Property="Background" Value="#3F72AF"/>
                                <Setter TargetName="cpButton" Property="TextBlock.Foreground" Value="#FFD369"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,1,1">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="112"/>

            <RowDefinition Height="44"/>
            <RowDefinition Height="44"/>
            <RowDefinition Height="58"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!--TextBlocks-->
        <TextBlock Text="Voertuig zoeken" Grid.ColumnSpan="3" 
                   FontSize="28"
                   Grid.Row="0" 
                   Grid.Column="0" 
                   Background="#112D4E" 
                   Foreground="#F9F7F7" 
                   TextAlignment="Center" Margin="0,0,-12,0"/>
        <TextBlock Text="Nummerplaat:" 
                   Grid.Row="1" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0,10,0" Height="22"/>
        <TextBlock Text="BrandstofType:" Grid.Row="3" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0,10,0" Height="22"/>
        <TextBlock Text="Merk:" Grid.Row="4" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0,10,0" Height="22"/>
        <TextBlock Text="Model:" Grid.Row="5" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0,10,0" Height="22"/>

        <!--Inputs Fields-->
        <TextBox Name="txtNummerplaat" Grid.Row="1" 
                 Grid.Column="1" 
                 Margin="10,5,16,5" 
                 FontSize="16" Grid.ColumnSpan="1" />
        <ListBox Name="lstBrandstoftype" Grid.Row="3" 
                 Grid.Column="1" 
                 Margin="10,5,13,5" 
                 FontSize="16" Grid.ColumnSpan="1" />
        <ComboBox Name="cmbMerk" 
                 Grid.Row="4" 
                 Grid.Column="1" 
                 Margin="10,5,12,5" 
                 FontSize="16" SelectionChanged="cmbMerk_SelectionChanged" Grid.ColumnSpan="1" />
        <ComboBox Name="cmbModel" Grid.Row="5" 
                  Grid.Column="1" 
                  Margin="10,5,12,5" 
                  FontSize="16"/>

        <!--Buttons End-->
        <StackPanel Grid.Row="6"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal" Margin="40,18,0,0">
            <Button x:Name="btnZoek"
                    Click="btnZoek_Click"
                    Margin="5"
                    Height="25"
                    Width="100">
                <StackPanel Orientation="Horizontal">

                    <TextBlock Text="Zoeken"
                           Foreground="#F9F7F7"
                           VerticalAlignment="Center"
                           FontSize="12"/>
                </StackPanel>
            </Button>
            <Button x:Name="btnAnnuleren"
                    Click="btnAnnuleer_Click"
                    Margin="5"
                    Height="25"
                    Width="100">
                <StackPanel Orientation="Horizontal">

                    <TextBlock Text="Annuleren"
                           Foreground="#F9F7F7"
                           VerticalAlignment="Center"
                           FontSize="12"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
