<Window x:Class="Flapp_PL.View.Windows.BestuurderWindows.VoegBestuurderToe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flapp_PL.View.Windows.BestuurderWindows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Flapp: Bestuurder Toevoegen" 
        Height="375" 
        Width="315">
    <Window.Resources>
        <!-- Button Style-->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="borderButton" CornerRadius="5" Background="#112D4E" BorderThickness="0">
                            <ContentPresenter x:Name="cpButton" Content="{TemplateBinding Content}" TextBlock.Foreground="#F9F7F7" VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="borderButton" Property="Background" Value="#3F72AF"/>
                                <Setter TargetName="cpButton" Property="TextBlock.Foreground" Value="#FFD369"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <!--TextBlocks-->
        <TextBlock Text="Bestuurder Toevoegen" 
                   Grid.ColumnSpan="2" 
                   FontSize="26"
                   Grid.Row="0" 
                   Grid.Column="0" 
                   Background="#112D4E" 
                   Foreground="#F9F7F7" 
                   TextAlignment="Center"
                   Margin="0,0,-25,0" />
        <TextBlock Text="Naam:" 
                   Grid.Row="1" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0"/>
        <TextBlock Text="Voornaam:" 
                   Grid.Row="2" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0"/>
        <TextBlock Text="Geslacht:" 
                   Grid.Row="3" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0"/>
        <TextBlock Text="Geboortedatum:" 
                   Grid.Row="4" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0"/>
        <TextBlock Text="Rijksregister:" 
                   Grid.Row="5" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0"/>
        <TextBlock Text="Rijbewijzen:" 
                   Grid.Row="6" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0"/>

        <!--Input Fields-->
        <TextBox Name="txtNaam" 
                 Grid.Row="1" 
                 Grid.Column="1" 
                 Width="130" 
                 Margin="10,5,10,5" 
                 FontSize="16" />
        <TextBox Name="txtVoornaam" 
                 Grid.Row="2" 
                 Grid.Column="1" 
                 Width="130" 
                 Margin="10,5,10,5" 
                 FontSize="16" />
        <ComboBox Name="cbGeslacht" 
                  Grid.Row="3" 
                  Grid.Column="1" 
                  Width="130" 
                  Margin="10,5,10,5" 
                  FontSize="16">
            <ComboBoxItem IsSelected="True">Man</ComboBoxItem>
            <ComboBoxItem>Vrouw</ComboBoxItem>
        </ComboBox>
        <DatePicker Name="dpGeboorte" 
                    Grid.Row="4" 
                    Grid.Column="1" 
                    Width="130" 
                    Margin="5" 
                    Height="30" 
                    FontSize="16"/>
        <TextBox Name="txtRijksregister" 
                 Grid.Row="5" 
                 Grid.Column="1" 
                 Width="130" 
                 Margin="10,5,10,5" 
                 FontSize="16" />


        <!--Buttons End-->
        <Button Content="Voeg toe"
                x:Name="btnVoegtoe"
                Click="btnVoegtoe_Click"
                Grid.Column="0"
                Grid.Row="7"
                Margin="10,5,5,5"
                Height="25"
                Width="130"
                HorizontalAlignment="Center"/>
        <Button Content="Annuleer"
                x:Name="btnAnnuleer"
                Click="btnAnnuleer_Click"
                Grid.Column="1"
                Grid.Row="7"
                Margin="10,5,5,5"
                Height="25"
                Width="130"
                HorizontalAlignment="Center"/>
    </Grid>
</Window>
