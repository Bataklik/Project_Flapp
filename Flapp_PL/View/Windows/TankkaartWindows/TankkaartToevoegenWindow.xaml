<Window x:Class="Flapp_PL.View.Windows.TankkaartWindows.TankkaartToevoegenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Flapp_PL.View.Windows.TankkaartWindows" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Flapp: Tankkaart Toevoegen" 
        Height="500" 
        Width="320">
    <Window.Resources>
        <!-- Button Style-->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="borderButton" CornerRadius="5" Background="#112D4E" BorderThickness="0">
                            <ContentPresenter x:Name="cpButton" Content="{TemplateBinding Content}" TextBlock.Foreground="#F9F7F7" VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="borderButton" Property="Background" Value="#3F72AF"/>
                                <Setter TargetName="cpButton" Property="TextBlock.Foreground" Value="#FFD369"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <!--TextBlocks-->
        <TextBlock Text="Tankkaart Toevoegen" Grid.ColumnSpan="2" 
                   FontSize="28"
                   Grid.Row="0" 
                   Grid.Column="0" 
                   Background="#112D4E" 
                   Foreground="#F9F7F7" 
                   TextAlignment="Center" Margin="0,0,-16,0"/>
        <TextBlock Text="Geldigheidsdatum:" 
                   Grid.Row="1" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0"/>
        <TextBlock Text="Pincode:" Grid.Row="2" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0"/>
        <TextBlock Text="Bestuurder:" Grid.Row="3" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0"/>
        <TextBlock Text="Geblokkeerd:" Grid.Row="5" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0"/>
        <TextBlock Text="Brandstoftype:" Grid.Row="6" 
                   Grid.Column="0" 
                   FontSize="16" 
                   VerticalAlignment="Center" 
                   Margin="10,0"/>
        

        <!--Inputs Fields-->
        <DatePicker Name="dpGeldigheidsdatum" Grid.Row="1" 
                 Grid.Column="1" 
                 Width="130" 
                 Margin="5" 
                 Height="30" 
                 FontSize="16"
                 DisplayDateStart="{Binding Mode=OneWay,
                    Source={x:Static
                    System:DateTime.Today}}"/>
        <TextBox Name="txtPincode" Grid.Row="2" 
                 Grid.Column="1" 
                 Width="130" 
                 Margin="10,5,10,5" 
                 FontSize="16" />
        <ListBox Name="lbBestuurder" Grid.Row="3" 
                 Grid.Column="1" 
                 Width="130" 
                 Margin="10,17,10,17" 
                 FontSize="16" RenderTransformOrigin="0.526,-0.266" />
        <Button Content="Zoek Bestuurder" 
                x:Name="btnBestuurder" 
                Grid.Row="4" 
                Grid.Column="1" 
                Width="130" 
                Margin="10,5,10,5" 
                FontSize="12" Click="btnBestuurder_Click" />
        <ComboBox Name="cbGeblokkeerd" Grid.Row="5" 
                  Grid.Column="1" 
                  Width="130" 
                  Margin="10,5,10,5" 
                  FontSize="16">
            <ComboBoxItem>Ja</ComboBoxItem>
            <ComboBoxItem IsSelected="True">Nee</ComboBoxItem>
        </ComboBox>
        <StackPanel Grid.Row="6" 
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Margin="10,5"
                    Height="auto">
            <ComboBox Loaded="cbBrandstoffen_Loaded" x:Name="cbBrandstoffen"
                 Width="80" 
                 Height="30"
                 Margin="0,0,10,0" 
                 FontSize="12"/>
            <Button x:Name="btnVoegBrandstofToe"
                    Click="btnVoegBrandstofToe_Click"
                    Height="20" 
                    Width="20">
                <materialDesign:PackIcon Kind="Add"
                                         Width="10" 
                                         Height="10"                                
                                         Foreground="#F9F7F7"/>
            </Button>
            <Button x:Name="btnVerwijderBrandstof"
                    Click="btnVerwijderBrandstof_Click"
                    Height="20" 
                    Width="20"
                    Margin="1,0,0,0">
                <materialDesign:PackIcon Kind="Minus"
                                         Width="10" 
                                         Height="10"                                
                                         Foreground="#F9F7F7"/>

            </Button>
        </StackPanel>
        <ListBox Name="lbBrandstof" Grid.Row="7" 
                 Grid.Column="1" 
                 Width="130" 
                 Margin="10,7,11,10" 
                 FontSize="16"/>

        <!--Buttons End-->
        <Button Content="Voeg toe"
                x:Name="btnVoegtoe"
                Click="btnVoegtoe_Click"
                Grid.Column="0"
                Grid.Row="8"
                Margin="5,5,5,5"
                Height="25"
                Width="130"/>
        <Button Content="Annuleer"
                x:Name="btnAnnuleer"
                Click="btnAnnuleer_Click"
                Grid.Column="1"
                Grid.Row="8"
                Margin="5,5,5,5"
                Height="25"
                Width="130"/>
    </Grid>
</Window>
