            <!--  Bestuurder button  -->
            <Button
                x:Name="btnBestuurder"
                Grid.Column="0"
                Height="80"
                Margin="0,20"
                Click="btnBestuurder_Click"
                Style="{StaticResource MainButtons}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="50"
                        Height="50"
                        Margin="0,0,50,0"
                        HorizontalAlignment="Left"
                        Kind="Person" />
                    <TextBlock
                        Width="100"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Text="Bestuurder"
                        TextAlignment="Left" />
                </StackPanel>
            </Button>
            <!--  Voertuig button  -->
            <Button
                x:Name="btnVoertuig"
                Grid.Column="0"
                Height="80"
                Margin="0,20"
                Click="btnVoertuig_Click"
                Style="{StaticResource MainButtons}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="50"
                        Height="50"
                        Margin="0,0,50,0"
                        HorizontalAlignment="Left"
                        Kind="Car" />
                    <TextBlock
                        Width="100"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
